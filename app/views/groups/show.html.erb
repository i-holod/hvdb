<h4><%= @group.name %></h4>
Категория: <%= @group.cat %>
<br><br>
Список учеников:<br><br>

<% @group.students.each do |student| %>

  <b>Полное имя</b>: <%= student.fname %> <%= student.lname %> <%= student.sname %>

  <br>

  <b>Телефон</b>: <%= student.phone %>

  <br>

  <b>Адрес</b>: <%= student.address %>

  <br><br>

<% end %>
<br><br>
<hr>
<h4>Добавить ученика:</h4>
<%= form_for([@group, @group.students.build]) do |f| %>
  <p>
    <%= f.label :Фамилия %><br>
    <%= f.text_field :sname, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :Имя %><br>
    <%= f.text_field :fname, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :Отчество %><br>
    <%= f.text_field :lname, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :Телефон %><br>
    <%= f.text_field :phone, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :Адрес %><br>
    <%= f.text_field :address, :class => 'form-control' %>
  </p>

  <p>
    <%= f.submit 'Добавить ученика', :class => 'btn btn-primary'  %>
  </p>

<% end %>